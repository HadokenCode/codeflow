{
  "extends": "eslint:recommended",
  "rules": {
    "valid-jsdoc": 2,
    // Disable until Flow supports let and const
    "no-var": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-no-undef": 2,
    "react/wrap-multilines": 2
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
  },
  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true,
    "modules": true
  },
  "parserOptions": {
      sourceType: "module",
      "ecmaFeatures": {
          "jsx": true,
          "modules": true
      }
  },
  "plugins": [
    "react"
  ]
}

